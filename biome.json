{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"includes": [
			"src/**/*",
			"package.json",
			"biome.json",
			"hacs.json",
			"*.config.js"
		]
	},
	"linter": {
		"domains": {
			"solid": "all"
		},
		"rules": {
			"correctness": {
				"useImportExtensions": "error"
			}
		}
	}
}
